@using DotNetEd.CoreAdmin.ViewModels.User

@model ReportToDelete

@{
    ViewData["Page_Title"] = "Удаление";
    Layout = "_CoreAdminLayout";
}

<h1 class="display-4">Are you sure you want to delete this?</h1>

<div class="row my-3">
    <div class="col-lg-12">
        @Html.DisplayFor(m => m)
    </div>
</div>


@using (Html.BeginForm("BlockPost", "UserPage", new { }, FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-primary">Yes, delete it</button>

    @Html.ActionLink("No, go back", "Index")
}
