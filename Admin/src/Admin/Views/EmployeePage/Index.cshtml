@using Admin.ViewModels.Employee
@using DotNetEd.CoreAdmin.ViewModels

@model EmployeeDTO

@{
    ViewData["Page_Title"] = "Профиль";
    Layout = "_CoreAdminLayout";
}

<link type="text/css" href="~/css/readonlypage.css" rel="stylesheet" />

<h1 class="display-4">Профиль</h1>


@using (Html.BeginForm("Index", "EmployeePage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "add-form" }))
{
    <div class="info-panel">
        <div class="form-row">
            <div class="row-name">
                <label>Роль</label>
            </div>
            <br />
            <p class="only-read field">@Model.Status</p>
        </div>
        <div class="form-row">
            <div class="row-name">
                <label>Логин</label>
            </div>
            <br />
            <p class="only-read field">@Model.Login</p>
        </div>
        <div class="form-row password-row">
            <div class="row-name">
                <label>Сменить пароль</label>
            </div>
            <br />
            <input type="password" class="field password" asp-for="Password" name="Password" id="password" />           
            <label class="form-label" for="password" onclick="changeVisibility()">
                <svg width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                </svg>
            </label>
            <br />
            <ul class="condition-list enable" id="condition-list">
                <li class="condition" id="letter">Содержит маленькие(a-z) и большие(A-Z) буквы и числа.</li>
                <li class="condition" id="length">Длина больше или равна 8.</li>
            </ul>
        </div>
        <br />
        <div class="form-row submit-panel">
            <button type="submit" class="btn btn-primary submit-button" id="button" disabled>Save</button>         
        </div>
    </div>
}

<script src="~/js/password.js"></script>